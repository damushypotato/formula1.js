{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": [
        "src"
    ],
}